  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../../dist/out-tsc",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDeclarationOnly": false,
    "types": ["node"],
    "emitDecoratorMetadata": true,
