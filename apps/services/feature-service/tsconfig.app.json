{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../../dist/out-tsc",
    "module": "commonjs",
    "types": ["node"],
    "emitDecoratorMetadata": true,
    "target": "es2022"
  },
  "exclude": [
    "**/*.test.ts",
    "**/*.spec.ts",
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ],
  "include": ["src/**/*.ts"],
  "references": [
    {
      "path": "../../../libs/core/config/tsconfig.lib.json"
    }
  ]
}
