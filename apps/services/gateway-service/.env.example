# Gateway Service Configuration
NODE_ENV=development
PORT=3000
GLOBAL_PREFIX=api

# CORS Configuration
CORS_ORIGIN=*

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=1d

# Rate Limiting
RATE_LIMIT_TTL=60000
RATE_LIMIT_MAX=100

# Service URLs (gRPC endpoints)
AUTH_SERVICE_URL=localhost:50051
WORKFLOW_SERVICE_URL=localhost:50052
QUEUE_SERVICE_URL=localhost:50053
REALTIME_SERVICE_URL=localhost:50054
FEATURE_SERVICE_URL=localhost:50055
PAYMENT_SERVICE_URL=localhost:50056

# Logging
LOG_LEVEL=info