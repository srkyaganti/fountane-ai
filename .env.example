# Environment Configuration
NODE_ENV=development

# Database
DATABASE_URL=postgresql://fountane:fountane_dev_password@localhost:5432/fountane_dev
DATABASE_POOL_SIZE=10

# Redis
REDIS_URL=redis://:fountane_redis_dev@localhost:6379
REDIS_POOL_SIZE=10

# Authentication (Keycloak)
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=fountane
KEYCLOAK_CLIENT_ID=fountane-api
KEYCLOAK_CLIENT_SECRET=your-client-secret-here
KEYCLOAK_ADMIN_USERNAME=admin
KEYCLOAK_ADMIN_PASSWORD=admin_dev_password

# Object Storage (MinIO)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=fountane_minio
MINIO_SECRET_KEY=fountane_minio_dev
MINIO_USE_SSL=false
MINIO_BUCKET_NAME=fountane-dev

# Workflow Engine (n8n)
N8N_URL=http://localhost:5678
N8N_API_KEY=your-n8n-api-key-here
N8N_WEBHOOK_URL=http://localhost:5678/webhook

# Real-time (Centrifugo)
CENTRIFUGO_URL=http://localhost:8000
CENTRIFUGO_API_KEY=fountane-api-key-dev
CENTRIFUGO_SECRET=fountane-centrifugo-secret-dev

# Feature Flags (Unleash)
UNLEASH_URL=http://localhost:4242/api
UNLEASH_API_KEY=default:development.unleash-insecure-api-token
UNLEASH_INSTANCE_ID=fountane-dev

# Payments (Lago)
LAGO_API_URL=http://localhost:3000
LAGO_API_KEY=your-lago-api-key-here

# Application
APP_PORT=3333
APP_HOST=0.0.0.0

# API Gateway
API_GATEWAY_PORT=4000

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:4200

# JWT
JWT_SECRET=fountane-jwt-secret-development-only
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=fountane-jwt-refresh-secret-development-only
JWT_REFRESH_EXPIRES_IN=7d

# Encryption
ENCRYPTION_KEY=fountane-encryption-key-32-chars-dev
ENCRYPTION_ALGORITHM=aes-256-gcm

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# AI/LLM Configuration (to be configured later)
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
LLM_PROVIDER=openai
LLM_MODEL=gpt-4
LLM_TEMPERATURE=0.2
LLM_MAX_TOKENS=4096

# Demo Environment
DEMO_TTL_DAYS=7
DEMO_RESOURCE_QUOTA_CPU=4
DEMO_RESOURCE_QUOTA_MEMORY=8Gi
DEMO_RESOURCE_QUOTA_STORAGE=20Gi